{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false
  },
  "include": ["vite.config.ts"],

  /* 절대경로 설정 */
  "baseUrl": ".",
  "paths": {
    "@/*": ["src/*"],
    "@/pages/*": ["src/pages/*"],
    "@/components/*": ["src/components/*"]
  }
}
